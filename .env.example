NODE_ENV=local
PORT=4000

SWAGGER_HOST=http://localhost:4000
SWAGGER_ENABLED=true

# --- JWT and Session secret ---
JWT_SECRETE_KEY=replace-with-secure-random-string
SESSION_SECRETE_KEY=replace-with-secure-random-string

# --- Mongo basics ---
MONGO_URI=mongodb+srv://username:password@cluster.example.mongodb.net/turingtech
MONGO_DB=turingtech
MONGODB_LOG_LEVEL=debug

# --- Pool & timeouts ---
MONGO_MAX_POOL_SIZE=20
MONGO_MIN_POOL_SIZE=2
MONGO_MAX_IDLE_TIME_MS=60000
MONGO_SERVER_SELECTION_TIMEOUT_MS=10000
MONGO_SOCKET_TIMEOUT_MS=20000
MONGO_WAIT_QUEUE_TIMEOUT_MS=5000

# --- Write/Read concerns ---
MONGO_RETRY_WRITES=true
MONGO_W=majority
MONGO_W_TIMEOUT_MS=10000
MONGO_READ_CONCERN=majority

# --- Misc ---
MONGO_COMPRESSOR=zstd
MONGO_APP_NAME=turingtest-api
MONGO_AUTO_INDEX=false
MONGO_DEBUG=false

# --- CORS ---
CORS_ALLOWED_ORIGINS=http://localhost:3000